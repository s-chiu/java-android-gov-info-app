<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simon.knowyourgovernment.MainActivity">

    <View android:id="@+id/rectangle_at_the_top"
        android:layout_alignParentTop="true"
        android:background="#DDDDDD"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="50dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />
    <TextView
        android:text="TextView"
        android:id="@+id/location"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_width="300dp" />

    <TextView
        android:text="@string/no_net"
        android:layout_height="40dp"
        android:id="@+id/no_net"
        android:layout_width="150dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/no_net2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="@string/no_net2"
        android:layout_height="60dp"
        android:id="@+id/no_net2"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="38dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_height="455dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:id="@+id/official_view"
        android:layout_width="370dp" />
</android.support.constraint.ConstraintLayout>
